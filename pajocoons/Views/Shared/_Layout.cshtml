<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Pajocoons Cattery</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="Container">
                <div class="bovenvlak-links">
                   @Html.ActionLink("x", "Index", "Home",  new { @class = "headerLogo"  })
                    <p class="titels">@Html.ActionLink("Pajocoons Cattery", "Index", "Home")</p>
                </div>
                <div class="bovenvlak-rechts">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="headerNavigation">
                                <li class="navigationLink">@Html.ActionLink("Home", "Index", "Home")</li>
								<li class="navigationLink">@Html.ActionLink("Kittens", "Kittens", "Home")</li>
								<li class="navigationLink">@Html.ActionLink("Females", "Females", "Home")</li>
								<li class="navigationLink">@Html.ActionLink("Males", "Males", "Home")</li>
                                <li class="navigationLink">@Html.ActionLink("Others", "Others", "Home")</li>
								<li class="navigationLink">@Html.ActionLink("Media", "Media", "Home")</li>
								<li class="navigationLink">@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>


        <div id="containerContent">
            @RenderSection("featured", required: false)
            <section class="content">
                @RenderBody()
            </section>
        </div>

        <footer>
            <div class="Container">
                <div class="footer-links">
                    <p id="copyright">&copy; @DateTime.Now.Year - Pajocoons</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
